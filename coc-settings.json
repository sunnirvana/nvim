        "k": "addFile",
        "M": "addDirectory",
        "cw": "rename",

        ".": "toggleHidden",
        "zh": "toggleHidden",
        "R": "refresh",

        "?": "help",
        "q": "quit",
        "X": "systemExecute",
        "gd": "listDrive",

        "f": "search",
        "F": "searchRecursive",

        "gf": "gotoSource:file",
        "b": "gotoSource:buffer",

        "[[": "sourcePrev",
        "]]": "sourceNext",

        "[d": "diagnosticPrev",
        "]d": "diagnosticNext",

        "[c": "gitPrev",
        "]c": "gitNext",
        "<<": "gitStage",
        ">>": "gitUnstage"
